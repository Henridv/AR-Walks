<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.vop.arwalks"
      android:versionCode="2" android:versionName="early alpha">
    <uses-sdk android:minSdkVersion="7" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    

    <application android:icon="@drawable/appicon" android:label="@string/app_name" android:name="com.vop.tools.VopApplication">
        <service android:enabled="true" android:name="com.vop.services.TrackService"/>
        <service android:enabled="true" android:name="com.vop.services.LocationService"/>
        <activity android:icon="@drawable/appicon" 
        android:name="Login" 
        android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name="MainScreen"  android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation" ></activity>
        <activity android:name="Messages"  android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation" android:name="Tracks"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name="Profile"></activity>
        <activity android:name="Friends"  android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape"></activity>
        <activity android:name="com.vop.ar.LocatieMap"></activity>
        <uses-library android:name="com.google.android.maps"/>
        <activity android:screenOrientation="landscape" android:theme="@android:style/Theme.Light.NoTitleBar" android:name="com.vop.ar.SaveLocation"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:name="ListLocaties"></activity>
        <activity android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation" android:name="com.vop.ar.AugmentedReality"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:name="com.vop.ar.TrajectOpslaan"></activity>
        <activity android:screenOrientation="landscape" android:theme="@android:style/Theme.Light.NoTitleBar" android:name="com.vop.ar.EditTraject"></activity>
        <activity android:name="EditProfile" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.vop.ar.PaswoordWijzigen" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="RegisterProfile" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.vop.ar.StartEenWandeling"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation" android:name="AddFriend"></activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation" android:name="com.vop.ar.FriendProfile"></activity>
        <activity android:name="com.vop.ar.TrajectOpslaanZien"></activity>
        
    </application>
</manifest>
